generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement()) @map("id")
  name  String @map("name")
  email String @unique @map("email")

  @@map("users")
}

model EnergyBill {
  id               String   @id @default(uuid())
  clientNumber     String   @map("client_number")
  referenceMonth   String   @map("reference_month")
  electricityQty   Float    @map("electricity_qty")
  electricityValue Float    @map("electricity_value")
  sceeQty          Float    @map("scee_qty")
  sceeValue        Float    @map("scee_value")
  compensatedQty   Float    @map("compensated_qty")
  compensatedValue Float    @map("compensated_value")
  publicLighting   Float    @map("public_lighting")
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  @@map("energy_bills")
}
